{
  "name": "idreamshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "lint": "next lint --fix",
    "lint:strict": "eslint . --ext .js,.jsx,.ts,.tsx",
    "cleanup": "node prisma/cleanup.js",
